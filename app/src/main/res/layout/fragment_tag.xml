<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/centerStoryMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="'#해시태그'를 써보세요."
        android:textSize="17sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/subStoryMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="해시태그별로 쓴 이야기를"
        android:layout_below="@+id/centerStoryMessage"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="볼 수 있습니다."
        android:layout_below="@+id/subStoryMessage"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>