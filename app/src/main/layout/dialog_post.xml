<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/myStoryPostBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_myStoryPostClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_close_24"/>

        <LinearLayout
            android:id="@+id/myContentLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="450dp">

                <TextView
                    android:id="@+id/myPostContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="위치조정"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/myAnotherLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/myContentLinearLayout">

            <ImageView
                android:id="@+id/myImg_location_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_baseline_room_24"/>

            <TextView
                android:id="@+id/myText_distance_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#B4B4B4"
                android:text="○○km 이내" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:textColor="#B4B4B4"
                android:text="ㆍ"/>

            <TextView
                android:id="@+id/myDateTime_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#B4B4B4"
                android:text="언젠가"/>

            <ImageView
                android:id="@+id/myBtn_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="130dp"
                android:src="@drawable/ic_baseline_favorite_24" />

            <TextView
                android:id="@+id/myNumber_of_like_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="2dp"
                android:textColor="#B4B4B4"
                android:text="0"
                android:textSize="22dp"/>

            <ImageView
                android:id="@+id/myBtn_mention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_baseline_chat_bubble_24"/>

            <TextView
                android:id="@+id/myNumber_of_mention_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="2dp"
                android:textColor="#B4B4B4"
                android:text="0"
                android:textSize="22dp"/>

        </LinearLayout>

    </RelativeLayout>


</FrameLayout>