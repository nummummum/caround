<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="200dp"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:background="@color/white">

    <TextView
        android:id="@+id/myPost_unCover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:text="게시글 공개하기"
        android:gravity="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/myPost_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:text="게시글 수정하기"
        android:gravity="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/myPost_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:text="게시글 삭제하기"
        android:gravity="center"
        android:textSize="20sp"/>

</LinearLayout>